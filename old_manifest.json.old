{
  "name": "Look-see",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Look-see helps you find and fix accessibility issues",
    "homepage_url": "https://look-see.com/",
    "permissions": [
      "contextMenus",
      "declarativeContent",
      "storage",
      "webNavigation",
      "tabs",
      "activeTab",
      "webRequestBlocking",
      "identity",
      "notifications",
      "https://*.auth0.com/*",
      "https://*/*"
    ],
    "action": {
        "default_title": "Look-see",
        "default_popup": "color-contrast.html"
    },
    "background": {
      "service-worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
      "recorder.html"
    ],
    "icons": {
      "16": "images/Red_16.png",
      "32": "images/Red_32.png",
      "48": "images/Red_48.png",
      "128": "images/Red_128.png"
    },
    "content_security_policy": "script-src 'self' https://cdn.auth0.com/client/EaTG3cUplWrKpMsy1OKqnEQNoiu8ZhYt.js; object-src 'self'"
}
