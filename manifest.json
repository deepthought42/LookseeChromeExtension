{
  "name": "Look-see",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Look-see helps you find and fix accessibility issues",
    "homepage_url": "https://look-see.com/",
    "permissions": [
      "declarativeContent",
      "storage",
      "webNavigation",
      "tabs",
      "activeTab",
      "webRequestBlocking",
      "identity",
      "notifications",
      "https://*.auth0.com/*",
      "https://*/*"
    ],
    "browser_action": {
        "default_title": "Look-see",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "background": {
      "scripts": [
        "./env.js",
        "node_modules/auth0-chrome/dist/auth0chrome.min.js",
        "scripts/pusher.min.js",
        "src/main.js"
      ],
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
      "recorder.html"
    ],
    "icons": {
      "16": "images/Red_16.png",
      "32": "images/Red_32.png",
      "48": "images/Red_48.png",
      "128": "images/Red_128.png"
    },
    "content_security_policy": "script-src 'self' https://cdn.auth0.com/client/mMomHg1ZhzZkM4Tsz2NGkdJH3eeJqIq6.js; object-src 'self'"
}
